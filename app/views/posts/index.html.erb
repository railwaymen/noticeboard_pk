<% @posts.each do |post| %>
  <div class="media well">
    <div class="pull-left media-object">
      <%= post.user.name %>
    </div>
    <div class="media-body">
      <h4 class="media-heading">
        <%= link_to post.title, post_path(post) %>
      </h4>
      <%= post.content %>
    </div>
  </div>
<% end %>